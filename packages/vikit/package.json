{
  "name": "vikit",
  "version": "0.1.1",
  "description": "Vietnamese Kit",
  "repository": "https://github.com/write-for-CHRIST/viutil.git",
  "author": "Nam Pham <nampdn@protonmail.com>",
  "license": "MIT",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "files": [
    "build/*"
  ],
  "scripts": {
    "start": "run-p watch:tsc watch:parcel",
    "build": "run-s build:parcel build:tsc",
    "watch:parcel": "parcel watch src/index.ts --target node",
    "watch:tsc": "tsc --watch",
    "build:parcel": "parcel build src/index.ts --target node",
    "build:tsc": "tsc"
  },
  "devDependencies": {
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.0",
    "parcel-plugin-typescript": "^1.0.0",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2"
  }
}
